# WordPress Plugin Template - Docker Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here

# WordPress Configuration
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
WP_DEBUG_LOG_FILE=/wp-content/debug.log

# Port Configuration
WP_PORT=8000
PMA_PORT=8080
DB_PORT=3306
REDIS_PORT=6379
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# PHP Configuration
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# Xdebug Configuration
XDEBUG_MODE=debug,develop,profile
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_IDE_KEY=PHPSTORM

# WordPress URLs (adjust if using custom ports)
WP_HOME=http://localhost:8000
WP_SITEURL=http://localhost:8000

# Development Settings
WP_ENVIRONMENT_TYPE=development
AUTOMATIC_UPDATER_DISABLED=true
WP_DISABLE_FATAL_ERROR_HANDLER=true

# Email Configuration (if using Mailhog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@localhost
SMTP_FROM_NAME="WordPress Dev"

# Redis Configuration (if using caching profile)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Security (for production use - change these!)
WP_AUTH_KEY=your-unique-auth-key-here
WP_SECURE_AUTH_KEY=your-unique-secure-auth-key-here
WP_LOGGED_IN_KEY=your-unique-logged-in-key-here
WP_NONCE_KEY=your-unique-nonce-key-here
WP_AUTH_SALT=your-unique-auth-salt-here
WP_SECURE_AUTH_SALT=your-unique-secure-auth-salt-here
WP_LOGGED_IN_SALT=your-unique-logged-in-salt-here
WP_NONCE_SALT=your-unique-nonce-salt-here
